<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="@dimen/txfm_items_cell_content_margin"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"


        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@drawable/customborder"
            android:layout_gravity="center_vertical"
            android:id="@+id/issue_material_from_stock_slno"/>
        <TextView
            android:id="@+id/issue_item_from_stock_item_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="0.40"
            android:gravity="center"
            tools:text="Item to be issued"
            android:background="@drawable/customborder"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"

            android:id="@+id/issue_item_from_stock_uom"
            android:background="@drawable/customborder"


            />
        <TextView
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:gravity="center_vertical"
            android:id="@+id/issue_item_from_stock_avaliable_qty"
            android:background="@drawable/customborder"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/isse_item_from_stock_qty"
            android:gravity="center"
            android:layout_weight="0.30"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:background="@drawable/customborder"

            />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"

            android:layout_weight="0.40"
            android:id="@+id/issue_item_from_stock_select_dswh"
            android:background="@drawable/customborder">

        </Spinner>
        <ImageView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.20"
            android:background="@drawable/customborder"
            android:id="@+id/issue_item_from_stock_select_batchorsln"
            android:src="@drawable/ic_arrow_down" />



    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fab_margin"
        android:layout_marginTop="@dimen/border_margin"
        android:textSize="@dimen/sln_batchno_font_size"
        android:background="@color/colorError"
        android:id="@+id/delete_row_issue_mat_from_stock"
        android:text="Delete Row"
        android:textColor="@color/cardview_light_background"/>

</LinearLayout>