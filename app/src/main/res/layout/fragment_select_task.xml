<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_task_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.epochconsulting.erpnext.mprp.fragments.SelectTaskFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/select_task_fragment_logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_height"
            android:layout_marginTop="@dimen/top_margin"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_task_fragment_logo_layout"
        android:layout_marginLeft="@dimen/top_margin"
        android:layout_marginRight="@dimen/top_margin"
        android:layout_marginTop="@dimen/fab_margin">

        <LinearLayout
            android:id="@+id/select_buttons_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/top_margin"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/fabulous_margin"
                    android:layout_height="wrap_content"
                    android:text="@string/select_task_request_items_clue"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/fab_margin"/>
                <ImageButton
                    android:id="@+id/select_task_request_items_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/select_task_request_items_clue"
                    android:src="@mipmap/ic_request_items"
                    android:layout_weight="2"
                    android:background="@color/colorPrimaryDark"/>

            </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/fab_margin">
            <TextView
                android:layout_width="@dimen/fabulous_margin"
                android:layout_height="wrap_content"
                android:text="@string/select_task_transform_clue"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/fab_margin"/>
            <ImageButton
                android:id="@+id/select_task_transform_items_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/select_task_transform_clue"
                android:src="@mipmap/ic_transform"
                android:layout_weight="2"
                android:background="@color/colorPrimaryDark"
                />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fab_margin">
            <TextView
                android:layout_width="@dimen/fabulous_margin"
                android:layout_height="wrap_content"
                android:text="@string/select_task_issue_items_clue"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/fab_margin"/>

            <ImageButton
                android:id="@+id/select_task_issue_items_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/select_task_issue_items_clue"
                android:src="@mipmap/ic_issue_items"
                android:layout_weight="2"
                android:background="@color/colorPrimaryDark"
                />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>

